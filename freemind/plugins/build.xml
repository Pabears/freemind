<project name="freemind_plugins" default="dist" basedir=".">
	
	<macrodef name="callant">
		<attribute name="task"/>
		<sequential>
			<ant antfile="plugins/build_help.xml" target="@{task}"/>
			<ant antfile="plugins/build_svg.xml" target="@{task}"/>
			<ant antfile="plugins/build_time.xml" target="@{task}"/>
<!--Temporarily disabled:
			<ant antfile="plugins/build_jabber.xml" target="@{task}"/> -->
		</sequential>
	</macrodef>
	
	<target name="build">
		<callant task="build"/>
	</target>

	<target name="dist">
		<callant task="dist"/>
	</target>

	<target name="post">
		<callant task="post"/>
	</target>

</project>